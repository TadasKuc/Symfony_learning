    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Manufacturer</th>
                <td>{{ car.manufacturer }}</td>
            </tr>
            <tr>
